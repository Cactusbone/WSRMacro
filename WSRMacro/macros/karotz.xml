<grammar version="1.0" xml:lang="fr-FR" mode="voice" root="ruleKarotz" xmlns="http://www.w3.org/2001/06/grammar" tag-format="semantics/1.0">
  <rule id="ruleKarotz" scope="public">
    <example>Sarah prends une photo</example>
    <tag>out.action=new Object(); </tag>
    <one-of>
      <item>Sarah prends une photo<tag>out.action.photo = "true";</tag></item>
      <item>Sarah parle du terrier<tag>out.action.tts = "J'aime les lapins";</tag></item>
      <item>Sarah fait danser le lapin<tag>out.action.play = "http://dl.dropbox.com/u/255810/Temporaire/MP3/Money.mp3";</tag></item>
    </one-of>
    <tag>out.action._attributes.uri="http://127.0.0.1:8080/sarah/karotz";</tag>
  </rule>
</grammar>
