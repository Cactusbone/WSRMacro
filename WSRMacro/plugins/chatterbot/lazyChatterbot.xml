<grammar version="1.0" xml:lang="fr-FR" mode="voice" root="lazyGreetings" xmlns="http://www.w3.org/2001/06/grammar" tag-format="semantics/1.0">
  <rule id="lazyGreetings" scope="public">
    <tag>out.action=new Object();</tag>
    <one-of>
      <item>
        Merci <ruleref special="GARBAGE"/> SARAH
        <tag>out.action._attributes.context = "default"</tag>
        <tag>out.action._attributes.tts = "mais de rien"</tag>
      </item>

      <item>
        Ma question est <ruleref special="GARBAGE" /> SARAH
        <tag>out.action._attributes.dictation="true";</tag>
      </item>
      
      <item>
        Dis moi <ruleref special="GARBAGE" /> SARAH
        <tag>out.action._attributes.dictation="true";</tag>
      </item>
      
    </one-of>
    <tag>out.action._attributes.uri="http://127.0.0.1:8080/sarah/chatterbot";</tag>
  </rule>
</grammar>
